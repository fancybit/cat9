{
  "name": "cat9",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "vue-cli-service serve --host 0.0.0.0 --production --no-hot",
    "serve": "vue-cli-service serve --host 0.0.0.0",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "npm run build && electron-packager . \"玄玉逍游\" --platform=win32 --arch=x64 --out=electron-build-new --overwrite --ignore=node_modules --ignore=.git",
    "electron:serve": "electron ."
  },
  "dependencies": {
    "axios": "^1.6.0",
    "core-js": "^3.8.3",
    "vue": "^3.2.13",
    "vue-i18n": "^v11.1.4",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "mini-css-extract-plugin": "^2.9.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "main": "background.js",
  "build": {
    "appId": "com.cat9.entertainment",
    "productName": "玄玉逍游",
    "directories": {
      "output": "electron-build"
    },
    "files": [
      "background.js",
      "dist/**/*",
      "public/favicon.ico"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "sign": false
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "compression": "store",
    "buildDependenciesFromSource": true
  }
}
